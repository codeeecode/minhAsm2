<form action="/toy/edit/{{toy._id}}" method="post" class="card p-3 bg-light text-center">
   <h2 class="text text-primary">Edit Lego</h2>
   <div class="form-group">
      <label class="text-success h6"> Name</label>
      <input class="form-control" type="text" name="name" value="{{toy.name}}" required 
         maxlength="20">
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6"> Price</label>
      <input class="form-control" type="number" name="price" value="{{toy.price}}" required 
         maxlength="20">
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6"> Image</label><br>
      <img src="{{toy.image}}" width="100" height="100">
      <input class="form-control mt-3" type="text" name="image" value="{{toy.image}}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Date</label>
      <input class="form-control" type="date" name="dob" value="{{dateFormat toy.dob 'YYYY-MM-DD'}}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">made</label>
      <input class="form-control" type="text" name="made" value="{{toy.made}}" required >
   </div>

   <div class="form-group mt-3">
      <label class="text-success h6">Describe</label>
      <input class="form-control" type="text" name="des" value="{{toy.des}}" required >
   </div>
   <div class="form-group mt-3">
      <input class="btn btn-primary mt-3" type="submit" value="Edit">
   </div>
</form>