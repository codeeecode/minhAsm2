<table class="table table-bordered bg-light p-4 mt-3 mb-3 text-center">
   <tr>
      <th class="text-primary" colspan="4">Customer List</th>
      <th>
         <a class="btn btn-primary" href="/customer/add">ADD</a>
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>DOB</th>
      <th>Phone</th>
      <th>Gender</th>
   </tr>
   <tr>
    <th colspan="4">
         <select class="form-control" onchange="window.location.href=this.value">
            <option value="">Sort by name</option>
            <option value="/customer/sort/asc">Ascending</option>
            <option value="/customer/sort/desc">Descending</option>
         </select>
      </th>
      <th colspan="2">
         <form action="/customer/search" method="post">
            <div class="form-group">
               <input class="form-control" type="search" name="name" placeholder="Enter customer name to search">
            </div>
         </form>
      </th>
   </tr>
   {{#each customer }}
   <tr>
      <td>

        <a href="/customer/detail/{{_id}}">
        {{name}}
        </a>
      </td>
      <td>{{email}}</td>
      <td>{{address}}</td>
      <td>{{dateFormat dob "DD/MM/YYYY"}}</td>
      <td>{{phone}}</td>
      <td>{{gender}}</td>
      {{!-- <td>
         <a href="/customer/detail/{{_id}}">
            <img src="{{image}}" width="100" height="100">
         </a>
      </td> --}}
      {{!-- <td>
        {{#equal graduated true}}
         <span style="color: red; font-weight: bold;">Graduated</span>
         {{/equal}}
         {{#equal graduated false}}
         <span style="color: blue; font-style: italic;">Ungraduated</span>
         {{/equal}}
      </td> --}}
      <td>
         <a class="btn btn-warning" href="/customer/edit/{{_id}}">EDIT</a>
         <a class="btn btn-danger" href="/customer/delete/{{_id}}">DELETE</a>
      </td>
   </tr>
   {{/each}}
</table>








